{
  "name": "rehype-shiki-reloaded",
  "version": "0.0.9",
  "description": "Rehype plugin to highlight code blocks with shiki, with dark mode!",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "prettier --write '**/*.js' && xo --fix",
    "test": "xo",
    "build": "tsc",
    "release": "auto shipit"
  },
  "repository": "hipstersmoothie/rehype-shiki-reloaded",
  "keywords": [
    "rehype",
    "shiki",
    "hast",
    "syntax",
    "highlight",
    "highlighting"
  ],
  "author": "Andrew Lisowski <lisowski54@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "fast-copy": "^2.1.1",
    "hast-util-to-string": "^1.0.4",
    "shiki": "^0.9.2",
    "shiki-languages": "^0.2.7",
    "unist-builder": "^2.0.3",
    "unist-util-visit": "^2.0.3"
  },
  "devDependencies": {
    "auto": "^10.16.8",
    "prettier": "^2.2.1",
    "typescript": "^4.1.5",
    "xo": "^0.32.1"
  },
  "xo": {
    "prettier": true,
    "esnext": false
  }
}
